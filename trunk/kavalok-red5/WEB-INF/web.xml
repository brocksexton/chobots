<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/j2ee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" 
   version="2.4"> 

	<display-name>Kavalok Red5 application</display-name>

	<context-param>
	    <param-name>globalScope</param-name>
	    <param-value>default</param-value>
	</context-param>

	<context-param>
	    <param-name>contextConfigLocation</param-name>
	    <param-value>/WEB-INF/red5-*.xml</param-value>
	</context-param>

	<context-param>
		<param-name>locatorFactorySelector</param-name>
		<param-value>red5.xml</param-value>
	</context-param>

	<context-param>
		<param-name>parentContextKey</param-name>
		<param-value>default.context</param-value>
	</context-param>
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>{context.path}</param-value>
	</context-param>
	
	<listener>
	    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	
	<listener>
	    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

    <!-- remove the following servlet tags if you want to disable remoting for this application -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>fork</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>xpoweredBy</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <!-- The mapping for the JSP servlet -->
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jspx</url-pattern>
    </servlet-mapping>

	
	
    <servlet>
        <servlet-name>smscoinstatus</servlet-name>
        <servlet-class>com.kavalok.billing.smscoin.servlet.SMSCoinStatusServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>smscoinstatus</servlet-name>
        <url-pattern>/smscoinstatus</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>smscoinresult</servlet-name>
        <servlet-class>com.kavalok.billing.smscoin.servlet.SMSCoinResultServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>smscoinresult</servlet-name>
        <url-pattern>/smscoinresult</url-pattern>
    </servlet-mapping>
	
  <servlet>
    <servlet-name>CXFServlet</servlet-name>
    <display-name>CXF Servlet</display-name>
    <servlet-class>
        org.apache.cxf.transport.servlet.CXFServlet
    </servlet-class>
    <init-param> 
      <param-name>config-location</param-name> 
      <param-value>cxf-servlet.xml</param-value> 
    </init-param> 
    <!--init-param> 
      <param-name>bus.id</param-name> 
      <param-value>servlet.systest.bus.id</param-value> 
    </init-param--> 
  </servlet>

  <servlet-mapping>
    <servlet-name>CXFServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>testing</servlet-name>
        <servlet-class>com.kavalok.TestingServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>testing</servlet-name>
        <url-pattern>/testing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>paypalipn</servlet-name>
        <servlet-class>com.kavalok.billing.paypal.servlet.PaypalIPNServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>paypalipn</servlet-name>
        <url-pattern>/paypalipn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adyennotification</servlet-name>
        <servlet-class>com.kavalok.billing.adyen.servlet.AdyenNotificationServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>adyencustom</servlet-name>
        <url-pattern>/adyencustom</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adyencustom</servlet-name>
        <servlet-class>com.kavalok.billing.adyen.servlet.AdyenCutomParamsServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>adyennotification</servlet-name>
        <url-pattern>/adyennotification</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>zapakbilling</servlet-name>
        <servlet-class>com.kavalok.billing.zapak.ZapakBillingServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>zapakbilling</servlet-name>
        <url-pattern>/zapakbilling</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>zapakbilling</servlet-name>
        <url-pattern>/zapakPayment</url-pattern>
    </servlet-mapping>
	
	<servlet-mapping>
        <servlet-name>trpr</servlet-name>
        <url-pattern>/trpr</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>trpr</servlet-name>
        <servlet-class>com.kavalok.billing.transaction.TransactionProcessorServlet</servlet-class>
    </servlet>

	

	 <servlet>
        <servlet-name>loginfrompartner</servlet-name>
        <servlet-class>com.kavalok.partners.LoginFromPartnerServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>loginfrompartner</servlet-name>
        <url-pattern>/loginfrompartner</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>gateway</servlet-name>
        <servlet-class>org.red5.server.net.servlet.AMFGatewayServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>gateway</servlet-name>
        <url-pattern>/gateway</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>XmlRpcServlet</servlet-name>
        <servlet-class>org.apache.xmlrpc.webserver.XmlRpcServlet</servlet-class>
        <init-param>
          <param-name>enabledForExtensions</param-name>
          <param-value>true</param-value>
          <description>
            Sets, whether the servlet supports vendor extensions for XML-RPC.
          </description>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>XmlRpcServlet</servlet-name>
        <url-pattern>/xmlrpc</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Forbidden</web-resource-name>
            <url-pattern>/streams/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

</web-app>
