package com.kavalok.dialogs{	import flash.display.MovieClip;	import flash.display.SimpleButton;	import com.kavalok.utils.GraphUtils;	import com.kavalok.gameplay.controls.FlashViewBase;	import flash.events.MouseEvent;	import flash.events.TimerEvent;	import flash.text.TextField;	import flash.utils.Timer;	import com.kavalok.events.EventSender;		public class DialogModMsgView extends DialogViewBase	{		public var okButton:SimpleButton;	//	public var messageType:TextField;				private var _ok:EventSender = new EventSender();				private var _timer:Timer;				public function DialogModMsgView(msgType:String, text:String = null, okVisible:Boolean = true, content:MovieClip = null, modal:Boolean = false)		{			super(content || new DialogModMsg(), text, modal);			okButton.addEventListener(MouseEvent.CLICK, onOkClick);			GraphUtils.setBtnEnabled(okButton, false);			okButton.visible = okVisible;			_timer = new Timer(1000, 3);			_timer.start();			_timer.addEventListener(TimerEvent.TIMER_COMPLETE, onTimerComplete);					/*	if (msgType == "global")			messageType.text = "Global Message";			else if (msgType == "moderator")			messageType.text = "Moderator Message";			else			messageType.text = "Important Message";*/		}				private function onTimerComplete(event:TimerEvent):void		{			GraphUtils.setBtnEnabled(okButton, true);		}				public function get ok():EventSender		{			return _ok;		}				protected function onOkClick(event:MouseEvent):void		{			hide();			ok.sendEvent();		}		}}